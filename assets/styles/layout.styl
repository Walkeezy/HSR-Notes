@import 'variables.styl'


// GENERAL
//----------------------------------------------------------

html
  box-sizing border-box
  font-family FontFamily
  font-weight normal
  font-style normal
  font-size 20px
  line-height LineHeight
  min-height 100%

body
  min-height 100%
  color Black
  background DarkGray
  transition background-color 200ms, color 200ms

*, *:before, *:after
  box-sizing inherit

*:focus
  outline none

 .wrapper
  max-width SiteWidth
  width ViewportWidth
  margin 0 auto


 // HEADER
 //----------------------------------------------------------

 header
  padding 5vw 0 3vw
  display flex
  justify-content space-between
  align-items center

.site-title
  color White
  margin 0


// NOTES OVERVIEW
//----------------------------------------------------------

.notes__header
  display flex
  justify-content space-between
  align-items center
  font-size 0.75rem

.sort-notes, .switch-status
  cursor pointer
  color LightBlue
  margin-right 0.5rem
  border-bottom 1px solid transparent
  padding-bottom 0.2rem
  transition color 200ms, border-color 200ms

  &:hover
    color White

  &.sort-notes--active
    border-bottom-color White

.sort-label
  color LightBlue
  font-weight 700
  margin-right 0.5rem

.notes__list
  margin 0
  padding 0
  list-style none

.note
  background White
  padding 1rem
  margin 2rem 0
  border-radius BorderRadius
  box-shadow 0 1rem 2rem 0 rgba(0,0,0,0.1)

.note__title
  font-weight 700
  font-size 1.2rem

.note__header, .note__footer
  color LightBlue


// EDIT NOTE
//----------------------------------------------------------

.edit-note
  z-index Overlay
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  align-items center
  justify-content center

  &.open
    display flex

 .edit-note__title
  margin-top 0
  margin-bottom 1.5rem

.edit-note__form
  position relative
  width 40rem
  max-width ViewportWidth
  background White
  padding 2rem
  border-radius BorderRadius
  box-shadow 0 3rem 6rem rgba(0,0,0,0.1)

.form__field
  margin 1rem 0

.meta-fields
  display flex
  align-items flex-start
  justify-content space-between

  .form__field
    width 47.5%
    flex 0 0 47.5%

.cancel-note
  display block
  position absolute
  top -0.75rem
  right -0.75rem
  width 2rem
  height 2rem
  cursor pointer
  background Teal
  border-radius 50%
  display flex
  align-items center
  justify-content center
  transition background 200ms, transform 200ms

  &:hover
    background shade(Teal, 5%)

  &:active
    transform scale(0.98)

  svg
    width 1rem
    height 1rem

.dimmer
  z-index Dimmer
  visibility hidden
  opacity 0
  transition visibility 0ms 200ms, opacity 200ms
  position fixed
  top 0
  left 0
  right 0
  bottom 0

  &.active
    visibility visible
    transition opacity 200ms
    opacity 1
    background rgba(DarkGray, 50%)


// FOOTER
//----------------------------------------------------------

footer
  padding 2.5vw 0 5vw
  text-align center

.switch-style
  cursor pointer
  color LightBlue
  font-size 0.8rem
  transition color 200ms

  &:hover
    color White

  &.switch-dark
    display none
