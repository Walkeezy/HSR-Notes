@import 'variables.styl'


// GENERAL
//----------------------------------------------------------

html
  box-sizing border-box
  font-family FontFamily
  font-weight normal
  font-style normal
  font-size 20px
  line-height LineHeight
  color Black
  background DarkGray
  min-height 100%

body
  min-height 100%

*, *:before, *:after
  box-sizing inherit

*:focus
  outline none

 .wrapper
  max-width SiteWidth
  width ViewportWidth
  margin 0 auto


 // HEADER
 //----------------------------------------------------------

 header
  padding 2rem 0


// NOTES OVERVIEW
//----------------------------------------------------------

.notes__sort
  color White

.notes__list
  margin 0
  padding 0
  list-style none

.note
  background White
  padding 1rem
  border-radius BorderRadius


// EDIT NOTE
//----------------------------------------------------------

.edit-note
  z-index Overlay
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  align-items center
  justify-content center

  &.open
    display flex

.edit-note__form
  position relative
  width 40rem
  max-width ViewportWidth
  background White
  padding 2rem
  border-radius BorderRadius
  box-shadow 0 3rem 6rem rgba(0,0,0,0.1)

.meta-fields
  display flex
  align-items flex-start
  justify-content space-between

.cancel-note
  display block
  position absolute
  top -0.75rem
  right -0.75rem
  width 2rem
  height 2rem
  cursor pointer
  background Teal
  border-radius 50%
  display flex
  align-items center
  justify-content center
  transition background 200ms, transform 200ms

  &:hover
    background shade(Teal, 5%)

  &:active
    transform scale(0.98)

  svg
    width 1rem
    height 1rem

.dimmer
  z-index Dimmer
  visibility hidden
  opacity 0
  transition visibility 0ms 200ms, opacity 200ms
  position fixed
  top 0
  left 0
  right 0
  bottom 0

  &.active
    visibility visible
    transition opacity 200ms
    opacity 1
    background rgba(DarkGray, 50%)
