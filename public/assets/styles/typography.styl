@import 'variables.styl'


// LINKS
//----------------------------------------------------------

a:link, a:visited
  color inherit
  text-decoration none
  transition color 200ms

a:hover, a:active
  color inherit
  text-decoration none


// HEADINGS
//----------------------------------------------------------

h1, h2, h3, h4, h5, h6
  font-weight 400
  margin 1rem 0
  line-height 1.35

h1
  font-size 1.8rem

  @media Breakpoint3
    font-size 1.4rem

h2
  font-size 1.4rem

h3
  font-size 1.2rem
  font-weight 700


// BUTTONS
//----------------------------------------------------------

button
  cursor pointer
  padding 0.75rem 1.25rem
  line-height normal
  font-weight 400
  background Teal
  color White
  border none
  border-radius BorderRadius
  box-shadow 0 1rem 2rem 0 rgba(0,0,0,0.1)
  transition background 200ms, transform 200ms

  &:hover, &:active
    background shade(Teal, 5%)

  &:active
    transform scale(0.98)

  .icon
    display inline-flex
    align-self center
    margin-right 0.2rem

    svg
      top 0.125em
      position relative
      width 1rem
      height 1rem

.small-button
  cursor pointer
  display inline-block
  padding 0.3rem 0.6rem
  font-size 0.8rem
  line-height normal
  background White
  color Teal
  border 1px solid Teal
  border-radius BorderRadius
  transition background 200ms, color 200ms, transform 200ms

  &:hover, &:active
    background Teal
    color White

    svg path
      fill White

  &:active
    transform scale(0.98)

  .icon
    display inline-flex
    align-self center
    margin-right 0.2rem

    svg
      top 0.125em
      position relative
      width 0.8rem
      height 0.8rem

  .text

    @media Breakpoint3
      display none


// INPUTS
//----------------------------------------------------------

input, textarea
  appearance none
  width 100%
  font-family inherit
  font-size 1rem
  line-height normal
  padding 0.75rem
  border-radius BorderRadius
  background mix(LightBlue, White, 10%)
  border 1px solid LightBlue
  transition background 200ms, border-color 200ms

  &:focus
    background White
    border-color mix(LightBlue, DarkGray, 75%)

textarea
  resize vertical
  height 8rem
  line-height LineHeight

label, legend
  display block
  font-size 0.75rem
  font-weight normal
  margin-bottom 0.5rem

fieldset
  margin 0
  padding 0
  border none

.radio-field
  display inline-block
  margin-top 0.75rem

  @media Breakpoint3
    display block

  + .radio-field
    margin-left 1.2rem

    @media Breakpoint3
      margin-left 0

  input
    display none

    &:checked + label

      .icon
        background Teal
        border-color Teal

      svg
       transform scale(1)

  label
    cursor pointer
    position relative
    vertical-align middle
    color DarkGray
    font-size 0.8333333rem
    display inline-block

    .text
      vertical-align middle

    .icon
      display inline-flex
      justify-content center
      align-items center
      vertical-align middle
      width 1.15rem
      height 1.15rem
      margin-right 0.4rem
      border-radius 50%
      background mix(LightBlue, White, 10%)
      border 1px solid LightBlue
      transform background-color 200ms, border-color 200ms

      svg
        width 0.75rem
        height 0.75rem
        transform scale(0)
        transition transform 200ms
